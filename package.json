{
  "name": "@gamegains/kit",
  "version": "0.0.3-3",
  "description": "Game settings adaptation tools for uploading games on Gamegains",
  "license": "MPL-2.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Gamegains/gamegains-kit.git"
  },
  "author": "Doonloo Ltd.",
  "keywords": [],
  "files": [
    "lib"
  ],
  "main": "lib/index.js",
  "typings": "lib/index.d.ts",
  "scripts": {
    "clean": "rimraf lib && rimraf coverage",
    "format": "prettier --write \"{src,__tests__,examples}/**/*.ts\" --single-quote --trailing-comma es5",
    "lint": "tslint --force --format verbose \"src/**/*.ts\"",
    "prepublish": "npm run build",
    "prebuild": "npm run clean && npm run format && npm run lint && echo Using TypeScript && tsc --version",
    "build": "tsc --pretty",
    "test": "jest",
    "coverage": "jest --coverage",
    "watch": "npm run build -- --watch",
    "watch:test": "jest --watch"
  },
  "bin": {
    "gamegains": "./lib/cli/index.js"
  },
  "dependencies": {
    "clime": "^0.5.9",
    "inquirer": "^4.0.1",
    "lodash": "^4.17.4",
    "mustache": "^2.3.0",
    "ora": "^1.3.0",
    "react": "^16.2.0",
    "recompose": "^0.26.0",
    "recursive-readdir": "^2.2.1",
    "scaffold-generator": "^2.0.3"
  },
  "devDependencies": {
    "@types/inquirer": "^0.0.36",
    "@types/jest": "^20.0.5",
    "@types/lodash": "^4.14.73",
    "@types/mustache": "^0.8.30",
    "@types/node": "^8.0.0",
    "@types/react": "^16.0.34",
    "@types/recursive-readdir": "^2.2.0",
    "coveralls": "^2.0.0",
    "jest": "^20.0.4",
    "jest-environment-node-debug": "^2.0.0",
    "prettier": "^1.5.2",
    "rimraf": "^2.0.0",
    "ts-jest": "^20.0.7",
    "ts-node": "^3.2.0",
    "tslint": "^5.0.0",
    "tslint-config-prettier": "^1.1.0",
    "typescript": "^2.0.0"
  },
  "engines": {
    "node": ">=8.0.0"
  },
  "jest": {
    "transform": {
      ".(ts)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|js)$",
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "testEnvironment": "node"
  },
  "bugs": {
    "url": "https://github.com/Gamegains/gamegains-kit/issues"
  },
  "homepage": "https://github.com/Gamegains/gamegains-kit#readme",
  "directories": {
    "example": "examples",
    "lib": "lib"
  }
}
